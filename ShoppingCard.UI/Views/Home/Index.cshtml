@model ShoppingCard.Models.ShowResult
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @*<h1 class="display-4">Welcome</h1>*@
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Main Category</th>
                <th scope="col">Category Name</th>
                <th scope="col">Product Name</th>
                <th scope="col">Amount</th>
                <th scope="col">Price</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in Model.ProductsList)
                {
                    <tr>
                        @{
                            string mainCategory = item.Category.MainCategory != null ? item.Category.MainCategory.Title : "";
                            <td>@mainCategory</td>
                            <td>@item.Category.Title</td>
                            <td>@item.Title</td>
                            <td>@item.Amount</td>
                            <td>@item.Price</td>
                        }
                    </tr>
                }
            }
        </tbody>
    </table>

    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Total Amount</th>
                <th scope="col">Total Amount After Discounts</th>
                <th scope="col">Total Discount</th>
                <th scope="col">Delivery Cost</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.GetTotalAmount</td>
                <td>@Model.ApplyCouponsDiscount</td>
                <td>@Model.GetTotalDiscount</td>
                <td>@Model.GetDeliveryCostCalculate</td>
            </tr>
        </tbody>
    </table>
</div>
